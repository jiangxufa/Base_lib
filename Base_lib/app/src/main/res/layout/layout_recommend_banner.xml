<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        app:delay_time="3000"
        app:indicator_drawable_selected="@drawable/shape_dots_select"
        app:indicator_drawable_unselected="@drawable/shape_dots_default"
        app:indicator_height="@dimen/dp_6"
        app:indicator_width="@dimen/dp_6"
        app:scroll_time="1500"/>

</android.support.constraint.ConstraintLayout>